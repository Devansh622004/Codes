import numpy as np
import matplotlib.pyplot as plt

sachin = [584, 1992, 1631, 1089, 1885]
kohli  = [159, 995, 1381, 2186, 1543]
sehwag = [68, 330, 1114, 1295, 2055]

years = ["1st Year", "2nd Year", "3rd Year", "4th Year", "5th Year"]
x = np.arange(len(years))
width = 0.25

plt.barh(x - width, sachin, color="purple", label="Sachin")
plt.barh(x, kohli, color="green", label="Kohli")
plt.barh(x + width, sehwag, color="blue", label="Sehwag")

plt.legend()
plt.xlabel("Runs")
plt.ylabel("Years")
plt.title("Run Comparison (First 5 Years of Career)")
plt.yticks(x, years)
plt.tight_layout()
plt.show()




